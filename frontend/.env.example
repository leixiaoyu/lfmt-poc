# LFMT Frontend Environment Variables
# Copy this file to .env.local and configure for your environment

# API Configuration
# AWS API Gateway endpoint (required for production/development with real backend)
# Get this from your CloudFormation stack outputs after deployment
VITE_API_URL=https://YOUR_API_GATEWAY_ID.execute-api.us-east-1.amazonaws.com/v1

# AWS Cognito Configuration
# Required for authentication with real AWS backend
# Get these values from your CloudFormation stack outputs after deployment
VITE_AWS_REGION=us-east-1
VITE_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
VITE_COGNITO_CLIENT_ID=YOUR_COGNITO_CLIENT_ID
VITE_COGNITO_DOMAIN=YOUR_COGNITO_DOMAIN

# Mock API (for local development without backend)
# Set to 'true' to use mock API responses, 'false' to connect to real AWS
VITE_MOCK_API=false

# Feature Flags
# Enable dark mode UI toggle
VITE_FEATURE_DARK_MODE=false
